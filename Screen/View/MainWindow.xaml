<Window x:Class="Screen.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screen.ViewModel"
        xmlns:local1="clr-namespace:Screen.View.Converter"
        xmlns:keyboard="clr-namespace:Keyboard.Model;assembly=Keyboard"
        xmlns:keyboard1="clr-namespace:Keyboard.View.Converter;assembly=Keyboard" 
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Handball Match Screen" Height="500" Width="800"
        WindowStyle="None" WindowState="Maximized"
        Background="#FF333333"
        FontFamily="Segoe UI">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <keyboard1:SuspensionTimeLeftConverter x:Key="SuspensionTimeLeft"/>
        <keyboard1:DecysecondsToTimeStringConverter x:Key="DecysecondsToTimeString"/>
        <local1:MatchToHostsTimeoutsConverter x:Key="MatchToHostsTimeouts"/>
        <local1:MatchToGuestsTimeoutsConverter x:Key="MatchToGuestsTimeouts"/>
        <local1:TimeoutColorConverter x:Key="TimeoutColor"/>

        <DataTemplate DataType="{x:Type keyboard:Suspension}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                    <TextBlock Text="{Binding PlayerNumber}" FontWeight="Bold" 
                               FontSize="15" VerticalAlignment="Center" Foreground="White"/>
                </Border>

                <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                    <TextBlock FontSize="15" VerticalAlignment="Center" Foreground="White">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource SuspensionTimeLeft}">
                                <Binding Path="EndInMatchDecyseconds"/>
                                <Binding Path="DataContext.Match.TimeInDecyseconds" 
                                         ElementName="MainLayout"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Border>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    
    <Grid x:Name="MainLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="30">
            <TextBlock Text="{Binding Match.TimeInDecyseconds, Converter={StaticResource DecysecondsToTimeString}}" 
                       FontSize="50" Margin="0,0,20,0" FontWeight="Bold"/>
            <TextBlock Text="{Binding Match.HalfNumber, StringFormat='({0})'}" 
                       FontSize="40" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Gospodarze" FontSize="40" HorizontalAlignment="Center"/>

            <TextBlock Text="{Binding Match.HostsPoints}" 
                       HorizontalAlignment="Center" FontSize="60" Margin="20"/>

            <ItemsControl ItemsSource="{Binding Match, Converter={StaticResource MatchToHostsTimeouts}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Width="50" Height="30" 
                                   Fill="{Binding Converter={StaticResource TimeoutColor}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding Match.HostsSuspensions}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Goście" FontSize="40" HorizontalAlignment="Center"/>

            <TextBlock Text="{Binding Match.GuestsPoints}" 
               HorizontalAlignment="Center" FontSize="60" Margin="20"/>

            <ItemsControl ItemsSource="{Binding Match, Converter={StaticResource MatchToGuestsTimeouts}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Width="50" Height="30" 
                           Fill="{Binding Converter={StaticResource TimeoutColor}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding Match.GuestsSuspensions}"/>
        </StackPanel>
    </Grid>
</Window>
