<Window x:Class="Keyboard.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard.View" 
        xmlns:viewmodel="clr-namespace:Keyboard.ViewModel" 
        xmlns:local1="clr-namespace:Keyboard.View.Converter"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Handball Match Keyboard" Height="600" Width="1200"
        Background="#FF333333"
        FontFamily="Segoe UI">
    <Window.Resources>
        <local1:DecysecondsToTimeStringConverter x:Key="DecysecondsToTimeString"/>
        <local1:ScoreToStringConverter x:Key="ScoreToString"/>
        <local1:ShortToLetterStringConverter x:Key="ShortToLetterString"/>
        <local1:InvertBooleanConverter x:Key="InvertBoolean"/>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Zarządzanie meczem piłki ręcznej" Foreground="White"
                   HorizontalAlignment="Center" FontSize="25"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Gospodarze" Foreground="White" FontSize="20" 
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Bramki" Foreground="White" FontSize="15"
                           HorizontalAlignment="Center"/>
                <Button Content="Dodaj bramkę" Command="{Binding AddHostsGoalCommand}"/>
                <Button Content="Odejmij bramkę" Command="{Binding RemoveHostsGoalCommand}"/>
                <Button Content="Ustaw ręcznie" Command="{Binding ManageHostsGoalsCommand}"/>

                <TextBlock Text="Czasy" Foreground="White" FontSize="15"
                           HorizontalAlignment="Center"/>
                <Button Content="Dodaj użyty czas" Command="{Binding AddUsedHostsTimeoutCommand}"/>
                <Button Content="Odejmij użyty czas" Command="{Binding RemoveUsedHostsTimeoutCommand}"/>

                <TextBlock Text="Kary" Foreground="White" FontSize="15"
                           HorizontalAlignment="Center"/>
                <Button Content="Zarządzaj karami" Command="{Binding ManageHostsSuspensionsCommand}"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Czas" Foreground="White" FontSize="20" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Match.TimeInDecyseconds, Converter={StaticResource DecysecondsToTimeString}}" 
                           Foreground="White" FontSize="40"
                           HorizontalAlignment="Center"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Column="0" Content="Wznów zegar" Command="{Binding ResumeMatchClockCommand}"/>
                    <Button Grid.Column="1" Content="Zatrzymaj zegar" Command="{Binding StopMatchClockCommand}"/>
                    <Button Grid.Column="2" Content="Ustaw ręcznie" Command="{Binding SetClockCommand}"/>
                    <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"
                            Content="Użyj syreny" Command="{Binding UseSoundEffectCommand}"/>
                </Grid>
                
                <TextBlock Text="Wynik" Foreground="White" FontSize="20" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Match.ActualScore, Converter={StaticResource ScoreToString}}"
                           Foreground="White" FontSize="40" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Czasy" Foreground="White" FontSize="20" 
                           HorizontalAlignment="Center"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <WrapPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Match.HostsTimeoutsUsed, Converter={StaticResource ShortToLetterString}, ConverterParameter=X}"
                                   Foreground="Red" FontSize="20"/>
                        <TextBlock Text="{Binding Match.HostsTimeoutsLeft, Converter={StaticResource ShortToLetterString}, ConverterParameter=O}"
                                   Foreground="Green" FontSize="20"/>
                    </WrapPanel>
                    <WrapPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Match.GuestsTimeoutsUsed, Converter={StaticResource ShortToLetterString}, ConverterParameter=X}"
                                   Foreground="Red" FontSize="20"/>
                        <TextBlock Text="{Binding Match.GuestsTimeoutsLeft, Converter={StaticResource ShortToLetterString}, ConverterParameter=O}"
                                   Foreground="Green" FontSize="20"/>
                    </WrapPanel>
                </Grid>
                
                <TextBlock Text="Kary" Foreground="White" FontSize="20" 
                            HorizontalAlignment="Center"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Lista kar -->
                </Grid>
            </StackPanel>
            
            <StackPanel Grid.Column="2">
                <TextBlock Text="Goście" Foreground="White" FontSize="20" 
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Bramki" Foreground="White" FontSize="15"
                           HorizontalAlignment="Center"/>
                <Button Content="Dodaj bramkę" Command="{Binding AddGuestsGoalCommand}"/>
                <Button Content="Odejmij bramkę" Command="{Binding RemoveGuestsGoalCommand}"/>
                <Button Content="Ustaw ręcznie" Command="{Binding ManageGuestsGoalsCommand}"/>

                <TextBlock Text="Czasy" Foreground="White" FontSize="15"
                           HorizontalAlignment="Center"/>
                <Button Content="Dodaj użyty czas" Command="{Binding AddUsedGuestsTimeoutCommand}"/>
                <Button Content="Odejmij użyty czas" Command="{Binding RemoveUsedGuestsTimeoutCommand}"/>

                <TextBlock Text="Kary" Foreground="White" FontSize="15"
                           HorizontalAlignment="Center"/>
                <Button Content="Zarządzaj karami" Command="{Binding ManageGuestsSuspensionsCommand}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Foreground="White">
                Serwer włączony na adresie xxx.xxx.xxx.xxx:xxxxx.
                <LineBreak/>
                Status ekranu: Rozłączony.
            </TextBlock>

            <Button Grid.Column="1"
                    Content="Nowy mecz" Command="{Binding NewMatchCommand}"/>
        </Grid>
    </Grid>
</Window>
